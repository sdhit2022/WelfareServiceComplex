@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model             ServiceComplex.Pages.SelectBranchModel
@{
    Layout = "_LateralLayout";
    ViewData["Title"] = "خطای سرور داخلی";
}

<body class="maintanence text-center">

<div class="container-fluid maintanence-content">
    <div class="">
        <div class="maintanence-hero-img">
            <img alt="logo" src="assets/img/90x90.jpg">
        </div>

        <form method="post">
            <p class="text">انتخاب شعبه.</p>
            <select name="branchId" class="text form-control" style="width:300px" asp-items="@(new SelectList(Model.Branch, "BusUnitUid", "BusUnitName"))">
            </select>
            <button type="submit" class="btn btn-info mt-4">تایید</button>
            <input type="hidden" name="returnUrl" value=@(ViewData["ReturnUrl"])/>
        </form>
    </div>
</div>


</body>