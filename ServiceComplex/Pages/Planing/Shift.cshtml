@section Scripts
{
    <script>

        function Create(){
            $("#createSalon").modal('show');
        }

        function Remove(id) {
            swal({
                title: 'آیا مطمئنید؟',
                text: "این عمل قابل بازگشت نیست!",
                type: 'warning',
                showCancelButton: true,
                confirmButtonText: 'حذف',
                padding: '2em'
            }).then(function (result) {
                debugger
                if (result.value) {
                    debugger
                    $.ajax({
                        url: "?handler=Remove&id=" + id,
                        type: "get",
                        success: function (result) {
                            debugger
                            if (result) {
                                swal(
                                    'موفق!',
                                    result.message,
                                    'success'
                                ).then(function () {
                                    window.location = "/BaseData/Salon";
                                });
                            } else {
                                swal(
                                    'خطا!',
                                    result.message,
                                    'error'
                                )
                            }
                        }

                    });
                }
            });
        }

        function Edit(id) {
            $("#editSalon").modal('show');
            $.ajax({
                type: "GET",
                url: "?handler=Edit&SLN_ID=" + id,
                success: function (result) {
                    var salon = JSON.parse(result);
                    $("#SlnName").val( salon.SlnName);
                    $("#SlnType").val(salon.SlnType);
                    //if (salon.FrWarHosUid !=null){
                    $("#FrWarHosUid").val(salon.FrWarHosUid);
                    //}
                    $("#SlnId").val(salon.SlnId);                
                }
            });           
        }
        function saveEdit()
        {
            document.getElementById("EditForm").submit();
        }
        $('#saveChanges').click(function () {
            $("#editSalon").modal('hide');
            $("#createSalon").modal('hide');

        });
        
    </script>
}



