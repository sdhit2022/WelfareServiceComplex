<div class="modal fade" id="createShift" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width:700px !Important">
            <div class="modal-header">
                <h5 class="modal-title text-center" > ایجاد شیفت جدید : </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <form method="post" class="needs-validation" asp-page="/Planing/Shift" asp-page-handler="Create" name="submitForm" id="">
                <div class="modal-body">

                    <div class="widget-content">
                        <div class="form-row">
                            <div class="col-md-6 mb-5">
                                <label >عنوان شیفت:</label>
                                <input name="ShfName" type="text" class="form-control basic border-none">
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-5">
                                    <label>زمان شروع:</label>
                                    <input name="ShfStartTime" type="text" class="form-control basic border-none">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-5">
                                    <label>زمان پایان:</label>
                                    <input name="ShfEndTime" type="text" class="form-control basic border-none">
                                </div>
                            </div> 
                            <div class="form-row">
                                <div class="col-md-6 mb-5">
                                    <label>تلورانس(دقیقه):</label>
                                    <input name="ShfTelorance" type="text" class="form-control basic border-none">
                                </div>
                            </div>
                           
                            

                        </div>


                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn" data-dismiss="modal" id="saveChanges" value="ذخیره " />
                    <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> بستن</button>
                </div>
            </form>

        </div>
    </div>
</div>


<div class="modal fade" id="editSalon" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
