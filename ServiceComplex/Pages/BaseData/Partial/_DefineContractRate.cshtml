
@model Application.BaseData.Dto.ContractDto
@inject Application.Product.Category.IProductCategory _service
@{

}
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="page-header">
            <div class="page-title">
                <h3>نرخ قرارداد ها</h3>
            </div>
        </div>

        <div class="row layout-top-spacing" id="cancel-row">

            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                
                <div class="widget-content widget-content-area br-6">
                    <div class="form-row">
                        @switch (Model.CntType)
                        {
                            case 0:
                                <div class="form-group col-md-3">
                                    <label for="">سقف اعتبار</label>
                                    <input id="CdCreditLimit" type="number" class="form-control" placeholder="سقف اعتبار">
                                </div>
                                break;
                            case 1:
                                <div class="form-group col-md-3">
                                    <label for="">درصد تخفیف</label>
                                    <input id="CdDiscountPercent" type="number" class="form-control" placeholder="درصد تخفیف">
                                </div>
                                break;
                             case 2:
                                <div class="form-group col-md-3">
                                    <label for="">مبلغ تخفیف</label>
                                    <input id="CdDiscountRial" type="number" class="form-control" placeholder="مبلغ تخفیف">
                                </div>
                                break;
                        }
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>اعمال برای</label>
                                <select id="CntType_create" name="CntType" asp-items="@(new SelectListItem(_service.CategorySelectOption(),"Value","Text",new SelectListGroup{}))" class="form-control" required>
                                    <option value="0" default="" selected="">انتخاب همه</option>

                                </select>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
