@page
@model ServiceComplex.Pages.BaseData.AccountRatingModel

@{
    ViewData["Title"] = "رتبه بندی مشترکین";
}

<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="page-header">
            <div class="page-title">
                <h3>رتبه بندی مشترکین</h3>
            </div>
        </div>

        <div class="row layout-top-spacing" id="cancel-row">

            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                <div class="widget-content widget-content-area br-6">
                    <div class="text-center">
                        <button onclick="Add()" class="btn btn-success btn-rounded btn-sm ">افزودن رکورد جدید</button>
                    </div>
                    <div class="table-responsive mb-4 mt-4">
                        <table id="dataTable_1" class="table table-hover table-bordered cell-border row-border" style="width:100%">
                            <thead>
                                <tr>
                                    <th>نام</th>
                                    <th>عملیات</th>

                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>



<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel1"> افزودن رتبه بندی مشترکین </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <form method="post" class="needs-validation" name="submitAddForm" id="submitAddForm">
                <div class="modal-body">

                    <div class="widget-content">
                        <div class="form-row">
                            <div class="col-md-12 mb-4">
                                <label for="">
                                    نام
                                    <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control basic" asp-for="Command1.Name" placeholder="نام ">
                                <span asp-validation-for="Command1.Name" class="error"></span>
                            </div>

                        </div>
                        <input type="hidden" class="hidden" asp-for="Command1.Id" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> انصراف</button>
                    <a id="addSubmit" class="btn btn-primary">ثبت</a>
                </div>
            </form>

        </div>
    </div>
</div>



<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel1"> ویرایش رتبه بندی مشترکین </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <form method="post" class="needs-validation" name="submitEditForm" id="submitEditForm">
                <div class="modal-body">

                    <div class="widget-content">
                        <div class="form-row">
                            <div class="col-md-12 mb-4">
                                <label for="">
                                    نام
                                    <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control basic" asp-for="Command.Name" placeholder="نام ">
                                <span asp-validation-for="Command.Name" class="error"></span>
                            </div>
                        </div>
                        <input type="hidden" class="hidden" asp-for="Command.Id" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> انصراف</button>
                    <a id="editSubmit" class="btn btn-primary">ویرایش</a>
                </div>
            </form>

        </div>
    </div>
</div>



@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/source/js/basedata/AccountRating.js"></script>


}

